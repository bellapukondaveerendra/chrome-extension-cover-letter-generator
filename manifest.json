{
    "manifest_version": 3,
    "name": "Cover Letter Generator",
    "version": "1.0",
    "description": "Generate cover letters from selected job descriptions.",
    "permissions": [
        "contextMenus",
        "scripting",
        "storage",
        "notifications",
        "activeTab"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "options_page": "settings.html"
}